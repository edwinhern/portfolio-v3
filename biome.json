{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"vcs": { "enabled": false, "clientKind": "git", "useIgnoreFile": false },
	"files": { "ignoreUnknown": false, "includes": ["**", "!.next", "!.pnpm-store", "!node_modules"] },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useSortedClasses": {
					"level": "error",
					"fix": "safe",
					"options": {
						"attributes": ["className"],
						"functions": ["clsx", "cva", "cn"]
					}
				}
			}
		}
	},
	"overrides": [
		{
			"includes": ["src/app/globals.css"],
			"css": {
				"linter": {
					"enabled": false
				}
			}
		}
	],
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"bracketSpacing": true
	}
}
